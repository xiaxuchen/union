<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.originit.union.mapper.SysUserDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.originit.union.entity.SysUserEntity" id="sysUserMap">
        <result property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <result property="email" column="email"/>
        <result property="mobile" column="mobile"/>
        <result property="img" column="img"/>
        <result property="intro" column="intro"/>
        <result property="deptId" column="dept_id"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="createUser" column="create_user"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="modifyUser" column="modify_user"/>
    </resultMap>

    <insert id="insertUsersIfNotExist" >
        INSERT IGNORE INTO user_bind(open_id,phone,agent_id,gmt_last_use)
        VALUES
        <foreach collection="userList" item="user" separator=",">
            (#{user.openId},#{user.phone},#{user.agentId},#{user.gmtLastUse})
        </foreach>
    </insert>

    <resultMap id="SysUserVOMap" type="com.originit.union.entity.vo.SysUserVO" autoMapping="true">
        <id property="userId" column="user_id" />
    </resultMap>

    <select id="selectByConditions" resultMap="SysUserVOMap">
        SELECT sys_user.*,agent_info.id agentId,
        agent_info.name,agent_info.sex,agent_info.account,
        agent_info.des
        FROM sys_user LEFT JOIN agent_info
                ON sys_user.user_id = agent_info.sys_user_id
                LEFT JOIN sys_user_role
                ON sys_user.user_id = sys_user_role.user_id
        <where>
            <if test="condition.sex != null">
                agent_info.sex = #{condition.sex}
            </if>
            <if test="condition.userId != null">
                AND sys_user.user_id = #{condition.userId}
            </if>
            <if test="condition.userName != null">
                AND sys_user.username LIKE %${condition.userName}%
            </if>
            <if test="condition.mobile != null">
                AND sys_user.phone LIKE %${condition.mobile}%
            </if>
            <if test="condition.roleId != null">
                AND sys_user_role.role_id = #{condition.roleId}
            </if>
            <if test="condition.name != null">
                AND agent_info.name LIKE %${condition.name}%
            </if>
        </where>
    </select>
</mapper>